{
  "manifest_version": 2,
  "author": "Renuo GmbH",
  "name": "Pull Requests Counter",
  "description": "This extension shows the number of Pull Requests assigned to you.",
  "version": "1.3.1",
  "options_page": "options.html",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "scripts": [
      "extension.js"
    ]
  },
  "permissions": [
    "activeTab",
    "https://api.github.com/",
    "alarms",
    "storage",
    "tabs"
  ]
}
